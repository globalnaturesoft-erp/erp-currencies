<div class="">
    <table class="table table-advance table-hover table-striped table-checkable order-column" id="">
        <thead>
            <tr>
                <th width='1%'>
                    <%= erp_datalist_check_all %>
                </th>
                <% if get_columns(params).include?("name") %>
                    <th class="sortable" sort-by='erp_currencies_currencies.name'>
                        <%= t('.name') %>
                    </th>
                <% end %>
                <% if get_columns(params).include?("code") %>
                    <th>
                        <%= t('.code') %>
                    </th>
                <% end %>
                <% if get_columns(params).include?("status") %>
                    <th>
                        <%= t('status') %>
                    </th>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <th>
                        <%= t('creator') %>
                    </th>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <th class="sortable" sort-by='erp_currencies_currencies.created_at'>
                        <%= t('created_at') %>
                    </th>
                <% end %>
                <th width="7%"><%= t('actions') %></th>
            </tr>
        </thead>
        <tbody>
            <% if @currencies.each do |currency| %>
                <tr class="odd gradeX">
                    <td>
                        <%= erp_datalist_check_row(id: currency.id) %>
                    </td>
                    <% if get_columns(params).include?("name") %>
                        <td><%= link_to currency.name, erp_currencies.edit_backend_currency_path(currency) %></td>
                    <% end %>
                    <% if get_columns(params).include?("code") %>
                        <td><%= currency.code %></td>
                    <% end %>
                    <% if get_columns(params).include?("status") %>
                    <td>
                        <% if currency.archived == true %>
                        <span class="label label-sm label-danger"><%= t('archived') %></span>
                        <% else %>
                        <span class="label label-sm label-success"><%= t('active') %></span>
                        <% end %> 
                    </td>
                    <% end %>
                    <% if get_columns(params).include?("creator") %>
                        <td></td>
                    <% end %>
                    <% if get_columns(params).include?("created_at") %>
                        <td><%= currency.created_at.strftime("%d/%m/%Y") %></td>
                    <% end %>
                    <td>
                        <%= erp_datalist_row_actions(
                            [
                                {
                                    text: '<i class="fa fa-edit"></i> '+t('edit'),
                                    href: erp_currencies.edit_backend_currency_path(currency)
                                },
                                {
                                    text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
                                    url: erp_currencies.archive_backend_currencies_path(id: currency),
                                    data_method: 'PUT',
                                    class: 'ajax-link'
                                },
                                {
                                    text: '<i class="fa fa-eye"></i> '+t('unarchive'),
                                    url: erp_currencies.unarchive_backend_currencies_path(id: currency),
                                    data_method: 'PUT',
                                    class: 'ajax-link'
                                },
                                {
                                    divider: true
                                },
                                {
                                    text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                    url: erp_currencies.backend_currency_path(currency),
                                    data_method: 'DELETE',
                                    class: 'ajax-link',
                                    data_confirm: t('delete_confirm')
                                }
                            ]
                        ) %>
                    </td>
                </tr>
            <% end.empty? %>
                <tr>
                    <td colspan="7"><%= t('.no_matching_records_found') %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
        
<%= erp_datalist_pagination(@currencies) %>